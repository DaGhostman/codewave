{
    "name": "codewave/codewave",
    "description": "Small extensible framework in PHP",
    "keywords": ["CodeWave", "PHP Framework", "MVC Framework"],
    "homepage": "https://github.com/DaGhostman/codewave",
    "type": "library",
    "require": {
        "php": ">=5.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitar Dimitrov",
            "email": "daghostman.dimitrov@gmail.com",
            "role": "development"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-0": { "Wave\\Framework\\": "src" }
    },
    "suggest": {
        "ext-mcrypt": "Version >= 2.4 Allows usage of Decorator\\Encrypt and Decorator\\Decrypt decorators.",
        "php-5.4" : "Better performance",
        "twig/twig": "Allows usage of Twig templates",
        "smarty/smarty": "Allows usage of Smarty v3 templates",
        "league/plates": "Using native PHP like templates",
        "wave/wave-database": "For simple OO database access"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": ">=0.9",
        "squizlabs/php_codesniffer": ">1.5",
        "ircmaxell/password-compat": "1.0.3",
        "satooshi/php-coveralls": "dev-master",
        "mikey179/vfsStream": "dev-master",
        "twig/twig": ">=1.16"
    }
}
